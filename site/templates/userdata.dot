<div class="card">
	<div class="card-inner">
		<h1>
			<button class="icon" onclick="hide_user_data()"><i class="gg-backspace"></i></button>
			Edit User Info
		</h1>
		<h2>{{=it.user.username}}</h2>
		<table>
			{{~it.creds: cred}}
				<tr>
					<td>{{=cred}}</td>
					<td><input id="cred-{{=cred}}" type="checkbox" {{?it.user.creds.includes(cred)}}checked{{?}} onclick="set_creds()" {{?(cred==='admin') && (api.username === it.user.username)}}disabled{{?}}></td>
				</tr>
			{{~}}
		</table>
		<p>
			<i style="float:left;">Active Sessions: <span id="session-ct-{{=it.user.username}}">{{=it.sessions}}</span></i>
			<button style="float:right;" onclick="revoke_sessions('{{=it.user.username}}')">Revoke?</button>
		</p>
		<button class="big wide border" onclick="confirm_delete_user('{{=it.user.username}}')">Delete</button>
	</div>
</div>
