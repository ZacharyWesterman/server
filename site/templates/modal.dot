<dialog id="modal-window">
	<div id="modal-window-expand" class="modal">
		<div>
			{{? !it.no_cancel }}
			<span class="close" onclick="_.modal.cancel()">&times;</span>
			{{?}}
			{{?it.title}}<h4>
				{{?it.type === 'info'}}
					<i style="padding-right: 1rem;" class="fa-solid fa-circle-info fa-2xl"></i>
				{{??it.type === 'error'}}
					<i style="padding-right: 1rem;" class="fa-solid fa-triangle-exclamation fa-2xl error"></i>
				{{??it.type === 'question'}}
					<i style="padding-right: 1rem;" class="fa-solid fa-circle-question fa-2xl"></i>
				{{??it.icon !== undefined}}
					<i style="padding-right: 1rem;" class="fa-solid fa-{{= it.icon }} fa-2xl"></i>
				{{?}}
				<b>{{=it.title}}</b>
			</h4>{{?}}

			{{?it.text}}<div id="modal-content-text" style="max-width: 700px;">{{=it.text}}</div>{{?}}
			{{~it.buttons : button : i}}
				{{?typeof button === 'object'}}
					<button {{? i==0 }}id="modal-button-first"{{?}} onclick="_.modal.return('{{=button[0]}}')" class="big border">{{=button[1]}}</button>
				{{??}}
					<button {{? i==0 }}id="modal-button-first"{{?}} onclick="_.modal.return('{{=button}}')" class="big border">{{=button}}</button>
				{{?}}
			{{~}}
		</div>
	</div>
</dialog>
