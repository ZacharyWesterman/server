<div id="modal-window" class="modal">
	<div class="modal-content">
		<span class="close" onclick="_.modal.cancel()">&times;</span>
		{{?it.title}}<h4><b>{{=it.title}}</b></h4>{{?}}
		{{?it.text}}<p>{{=it.text}}</p>{{?}}
		{{~it.buttons : button}}
			{{?typeof button === 'object'}}
				<button onclick="_.modal.return('{{=button[0]}}')" class="big border">{{=button[1]}}</button>
			{{??}}
				<button onclick="_.modal.return('{{=button}}')" class="big border">{{=button}}</button>
			{{?}}
		{{~}}
	</div>
</div>
