{{~it:blob}}
	<div class="card">
		<div class="card-inner">
			<p>
				<button class="icon" onclick="confirm_delete_blob('{{=blob.id}}', '{{=blob.name}}.{{=blob.ext}}')"><i class="fa-solid fa-trash"></i></button>
				<button class="icon"><a href="blob/{{=blob.id}}.{{=blob.ext}}" download><i class="fa-solid fa-file-arrow-down fa-lg"></i></a></button>
				{{=blob.name}}.{{=blob.ext}}
			</p>

			{{?blob.mimetype.split('/')[0] == 'video'}}
				<video width="100%" height="auto" controls>
					<source type="{{=blob.mimetype}}" src="blob/{{=blob.id}}.{{=blob.ext}}">
				</video>
			{{??blob.mimetype.split('/')[0] == 'image'}}
				<image width="100%" height="auto" src="blob/{{=blob.id}}.{{=blob.ext}}"></image>
			{{??blob.mimetype.split('/')[0] == 'audio'}}
				<audio src="blob/{{=blob.id}}.{{=blob.ext}}" controls></audio>
			{{??}}
				Mimetype = {{=blob.mimetype}}
			{{?}}

			<div class="disabled">
				Uploaded by {{=blob.creator}}<br>
				{{=blob.created}}
			</div>
		</div>
	</div>
{{~}}
