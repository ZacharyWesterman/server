<div class="center">
{{~it:user}}
	<div class="card">
		<div class="card-inner">
			<div onclick="toggle_expand('card-{{=user.username}}')">
				<h4><b>{{=user.username}}</b></h4>
				<p>Last sent at: {{=user.last_sent || 'Never'}}</p>
			</div>

			<div class="expand-container">
				<div id="card-{{=user.username}}" class="expand-contract">
					<table>
						<tr>
							<td>Phone:</td>
							<td><input type="tel" value="{{=user.phone}}" onchange="$.validate.phone(this)" onKeyUp="$.enforce.phone(this)"></td>
						</tr>
						<tr>
							<td>Lat:</td>
							<td><input type="number" step="any" value="{{=user.lat}}" onchange="$.validate.number(this)"></td>
						</tr>
						<tr>
							<td>Lon:</td>
							<td><input type="number" step="any" value="{{=user.lon}}" onchange="$.validate.number(this)"></td>
						</tr>
					</table>

					<br>
					<button onclick="delete_user('{{=user.username}}')">Delete</button>
					<br>
					<br>
				</div>
			</div>
		</div>
	</div>
{{~}}
</div>
