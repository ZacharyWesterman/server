<div class="card">
	<div class="card-inner">
		<div>
			<button class="icon" onclick="copy_to_clipboard('/blob/{{=it.id}}.{{=it.ext}}')"><i class="fa-solid fa-copy fa-lg"></i></button>
			<button class="icon"><a href="/blob/{{=it.id}}.{{=it.ext}}" download="{{=it.name.replace('&quot;', '&amp;quot;')}}.{{=it.ext}}"><i class="fa-solid fa-file-arrow-down fa-lg"></i></a></button>
			<div class="truncate">{{=it.name}}.{{=it.ext}}</div>
		</div>

		{{?it.mimetype.split('/')[0] == 'video'}}
			<video width="100%" height="auto" controls>
				<source type="{{=it.mimetype}}" src="/blob/{{=it.id}}.{{=it.ext}}">
			</video>
		{{??it.mimetype.split('/')[0] == 'image'}}
			<image width="100%" height="auto" src="/blob/{{=it.id}}.{{=it.ext}}"></image>
		{{??it.mimetype.split('/')[0] == 'audio'}}
			<audio src="/blob/{{=it.id}}.{{=it.ext}}" controls></audio>
		{{??}}
			Mimetype = {{=it.mimetype}}
		{{?}}

		<div class="disabled">
			Uploaded by {{=it.creator}}
			<button style="float: right;" class="icon" onclick="confirm_delete_blob('{{=it.id}}', '{{=escape(it.name)}}.{{=it.ext}}')"><i class="fa-solid fa-trash fa-lg"></i></button>
			<br>
			{{=it.created}}
		</div>
	</div>
</div>
