<div id="modal-upload-window" class="modal-outer">
	<div class="modal-inner">
		<div class="modal-content">
			<span class="close" onclick="_.modal.upload.return()">&times;</span>
			<h4>Select a file to upload</h4>
			<input id="modal-file" type="file" name="file" onchange="$('modal-button').disabled = false">
			<button class="icon" id="modal-button" onclick="_.modal.upload.start()" disabled>
				<i class="fa-solid fa-file-arrow-up"></i>
			</button><br>

			<progress class="hidden" id="upload-progress" value="0" max="100"></progress>
		</div>
	</div>
</div>
