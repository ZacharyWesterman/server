<h2>{{?it.length}}Outstanding Bugs{{??}}No Outstanding Bugs{{?}}</h2>

{{~it: bug}}
<div class="card">
	<div class="card-inner">
		<h4>{{=bug.title}}</h4>
		<p>{{=bug.body}}</p>

		<button class="icon left" *click="confirm_resolve_bug('{{=bug.id}}')"><i class="fa-solid fa-check fa-lg"></i></button>
		<button class="icon right" *click="confirm_delete_bug('{{=bug.id}}', '{{=escape(bug.title)}}')"><i class="fa-solid fa-trash fa-lg"></i></button>

		<div class="disabled">
			Created by {{=bug.creator}}
			<br>
			{{=bug.created}}
		</div>
	</div>
</div>
{{~}}
