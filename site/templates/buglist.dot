<h2>{{?it.length}}Outstanding Bugs{{??}}No Outstanding Bugs{{?}}</h2>

{{~it: bug}}
<div class="card">
	<div class="card-inner">
		<button class="icon right" *click="confirm_resolve_bug('{{=bug.id}}')"><i class="fa-solid fa-check fa-lg"></i></button>
		<div>{{=bug.body_html.replaceAll('<img ', '<img width="100%" height="auto" ')}}</div>

		<button class="icon right" *click="confirm_delete_bug('{{=bug.id}}', '{{=safe_html(bug.title)}}')"><i class="fa-solid fa-trash fa-lg {{?bug.creator !== api.username}}disabled{{?}}"></i></button>

		<div class="disabled">
			Created by {{=bug.creator}}
			<br>
			{{=bug.created}}
		</div>
	</div>
</div>
{{~}}
